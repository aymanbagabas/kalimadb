{
  "compilerOptions": {
    "target": "es2016",
    "module": "ES6",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "build",
    "noImplicitAny": false,
    "allowJs": true
  },
  "include": [
    "sources",
    "*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": true
}
